<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <!-- Vertical container -->
    <LinearLayout
        android:id="@+id/formContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="30dp"
        app:layout_constraintTop_toBottomOf="@id/logo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageButton
            android:id="@+id/backBtn"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@null"
            android:scaleType="fitCenter"
            android:src="@drawable/backBtn" />

        <LinearLayout
            android:id="@+id/signupRow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp">

            <ImageButton
                android:id="@+id/companyLogo"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginRight="10dp"
                android:background="@null"
                android:scaleType="fitCenter"
                android:src="@drawable/CompanyLogo_Sample" />

            <TextView
                android:id="@+id/companyName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="25dp"
                android:text="ABOITIZ CONSTRUCTION" />

        </LinearLayout>


        <TextView
            android:id="@+id/jobTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Construction Worker"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Please log in to continue using our app"
            android:textSize="14sp"
            android:layout_marginTop="4dp"
            android:layout_gravity="center_horizontal" />


        <LinearLayout
            android:id="@+id/signupRow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/applyBtn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_weight="1"
                android:text="Apply" />

            <Button
                android:id="@+id/saveBtn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_weight="1"
                android:text="Save" />

        </LinearLayout>

        <TextView
            android:id="@+id/aboutPosition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="About The Job"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/aboutPosition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Blahjafdnfaknfaknfkanfkanfknafknakfnaknfkalf"
            android:textSize="14sp"
            android:layout_marginTop="4dp" />

        <TextView
            android:id="@+id/positionOverview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Position Overview"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/aboutPosition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Blahjafdnfaknfaknfkanfkanfknafknakfnaknfkalf"
            android:textSize="14sp"
            android:layout_marginTop="4dp" />



    </LinearLayout>

    <!-- Bottom wave -->
    <ImageView
        android:id="@+id/waveBg"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:scaleType="fitXY"
        android:src="@drawable/bottom_wave"
        app:layout_constraintBottom_toBottomOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>

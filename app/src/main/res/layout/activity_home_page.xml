<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomePageActivity">

    <!-- SCROLLABLE MAIN CONTENT -->
    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/bottomNavigationView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="20dp">

            <!-- Logo and Titles -->
            <ImageView
                android:id="@+id/logo"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:src="@drawable/logo_with_bg" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="J.A.I.D.A.R"
                android:textColor="#4b0082"
                android:textSize="30dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Job Acquisition and Internships Radar"
                android:textColor="#4b0082"
                android:textSize="20dp"
                android:textStyle="bold" />

            <!-- Work/Hire Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                android:padding="5dp">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnWorker"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="5dp"
                    android:background="@drawable/button"
                    android:clipToOutline="true"
                    android:drawableStart="@drawable/looking_to_work_icon"
                    android:padding="10dp"
                    android:text="Looking to Work"
                    android:textColor="#ffffff" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnHiring"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:layout_marginStart="5dp"
                    android:background="@drawable/button"
                    android:clipToOutline="true"
                    android:drawableEnd="@drawable/looking_to_hire_icon"
                    android:padding="10dp"
                    android:text="Looking to Hire"
                    android:textColor="#ffffff" />
            </LinearLayout>

            <!-- Category Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:text="Select Category"
                android:textColor="#5742BF"
                android:textSize="20dp"
                android:textStyle="bold" />

            <!-- Category Buttons Group 1 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnCategoryElectrician"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_margin="3dp"
                    android:background="@drawable/button_gradient"
                    android:text="Electrician"
                    android:textColor="#5742BF"
                    android:textAllCaps="false" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnCategoryPlumber"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_margin="3dp"
                    android:background="@drawable/button_gradient"
                    android:text="Plumber"
                    android:textColor="#5742BF"
                    android:textAllCaps="false" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnCategoryCarpenter"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_margin="3dp"
                    android:background="@drawable/button_gradient"
                    android:text="Carpenter"
                    android:textColor="#5742BF"
                    android:textAllCaps="false" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnCategoryWelding"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_margin="3dp"
                    android:background="@drawable/button_gradient"
                    android:text="Welding"
                    android:textColor="#5742BF"
                    android:textAllCaps="false" />
            </LinearLayout>

            <!-- Category Buttons Group 2 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnCategoryRoofer"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_margin="3dp"
                    android:background="@drawable/button_gradient"
                    android:text="Roofer"
                    android:textColor="#5742BF"
                    android:textAllCaps="false" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnCategoryMechanic"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_margin="3dp"
                    android:background="@drawable/button_gradient"
                    android:text="Mechanic"
                    android:textColor="#5742BF"
                    android:textAllCaps="false" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnCategoryCaretaker"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_margin="3dp"
                    android:background="@drawable/button_gradient"
                    android:text="Caretaker"
                    android:textColor="#5742BF"
                    android:textAllCaps="false" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnCategoryIronworker"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_margin="3dp"
                    android:background="@drawable/button_gradient"
                    android:text="Ironworker"
                    android:textColor="#5742BF"
                    android:textAllCaps="false" />
            </LinearLayout>
            <TextView
                android:id="@+id/jobsHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Recent Opportunities"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#4B0082"
                android:layout_marginTop="16dp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/jobPreviewRecycler"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="16dp"
                android:orientation="horizontal" />



            <!-- Action Buttons -->
            <Button
                android:id="@+id/logout_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Logout" />

            <Button
                android:id="@+id/TEMP_EDITOR"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="EDITOR" />

            <Button
                android:id="@+id/TEMP_VIEW"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="VIEW" />
        </LinearLayout>
    </ScrollView>

    <!-- Background wave (optional, purely visual) -->
    <ImageView
        android:id="@+id/waveBg"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:scaleType="fitXY"
        android:src="@drawable/bottom_wave"
        app:layout_constraintBottom_toBottomOf="parent" />

    <!-- Bottom Navigation Bar -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationView"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:menu="@menu/bottom_nav_menu" />

</androidx.constraintlayout.widget.ConstraintLayout>
